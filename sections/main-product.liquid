<section class="premium-product">
  <div class="premium-container">

    <!-- LEFT SIDE -->
    <div class="premium-gallery">
      <div class="premium-main-image">
        <img 
          id="MainProductImage"
          src="{{ product.featured_image | image_url: width: 1400 }}"
          alt="{{ product.title }}">
      </div>

      <div class="premium-thumbnails">
        {% for image in product.images %}
          <img
            src="{{ image | image_url: width: 300 }}"
            onclick="document.getElementById('MainProductImage').src='{{ image | image_url: width: 1400 }}'"
          >
        {% endfor %}
      </div>
    </div>

    <!-- RIGHT SIDE -->
    <div class="premium-info">

      <h1 class="premium-title">
        {{ product.title }}
      </h1>

      <div class="premium-price">
        {{ product.price | money }}
      </div>

      <div class="premium-description">
        {{ product.description }}
      </div>

      {% if product.variants.size > 1 %}
      <div class="premium-variants">
        <label>Select Model</label>
        <select name="id" form="product-form">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">
              {{ variant.title }}
            </option>
          {% endfor %}
        </select>
      </div>
      {% endif %}

      <form method="post" action="/cart/add" id="product-form" class="premium-form">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        
        <div class="premium-quantity">
          <label>Quantity</label>
          <input type="number" name="quantity" value="1" min="1">
        </div>

        <button type="submit" class="premium-add">
          Add to Cart
        </button>
      </form>

      <form method="post" action="/checkout">
        <button type="submit" class="premium-buy">
          Buy Now
        </button>
      </form>

    </div>

  </div>
</section>
.premium-product {
  padding: 140px 40px;
  background: #ffffff;
}

.premium-container {
  max-width: 1400px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  gap: 100px;
  align-items: start;
}

.premium-gallery img {
  width: 100%;
  border-radius: 32px;
}

.premium-main-image img {
  box-shadow: 0 40px 80px rgba(0,0,0,0.08);
  transition: 0.4s ease;
}

.premium-main-image img:hover {
  transform: scale(1.02);
}

.premium-thumbnails {
  display: flex;
  gap: 16px;
  margin-top: 25px;
}

.premium-thumbnails img {
  width: 80px;
  border-radius: 14px;
  cursor: pointer;
  transition: 0.3s ease;
  opacity: 0.7;
}

.premium-thumbnails img:hover {
  opacity: 1;
  transform: translateY(-3px);
}

.premium-title {
  font-size: 3.5rem;
  font-weight: 600;
  margin-bottom: 25px;
}

.premium-price {
  font-size: 2rem;
  margin-bottom: 30px;
}

.premium-description {
  font-size: 1.15rem;
  line-height: 1.7;
  opacity: 0.8;
  margin-bottom: 50px;
}

.premium-variants label,
.premium-quantity label {
  font-size: 0.9rem;
  display: block;
  margin-bottom: 10px;
  opacity: 0.6;
}

select,
input[type="number"] {
  width: 100%;
  padding: 16px;
  border-radius: 14px;
  border: 1px solid #e5e5e5;
  font-size: 1rem;
  margin-bottom: 25px;
}

.premium-add {
  width: 100%;
  padding: 20px;
  background: #000;
  color: #fff;
  border: none;
  border-radius: 18px;
  font-size: 1.1rem;
  cursor: pointer;
  transition: 0.3s ease;
  margin-bottom: 15px;
}

.premium-add:hover {
  background: #111;
}

.premium-buy {
  width: 100%;
  padding: 20px;
  background: #f5f5f7;
  border: none;
  border-radius: 18px;
  font-size: 1.1rem;
  cursor: pointer;
}

.premium-buy:hover {
  background: #eaeaea;
}

/* Mobile */
@media (max-width: 900px) {
  .premium-container {
    grid-template-columns: 1fr;
    gap: 60px;
  }

  .premium-title {
    font-size: 2.5rem;
  }
}
