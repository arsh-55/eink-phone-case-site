<section style="padding:120px 40px;">
  <div style="max-width:1100px;margin:auto;display:grid;grid-template-columns:1fr 1fr;gap:60px;">

    <div>
      <img 
        src="{{ product.featured_image | image_url: width: 1200 }}"
        style="width:100%;border-radius:20px;"
      >
    </div>

    <div>
      <h1 style="font-size:2.5rem;margin-bottom:20px;">
        {{ product.title }}
      </h1>

      <p style="font-size:1.5rem;margin-bottom:20px;">
        {{ product.price | money }}
      </p>

      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" style="padding:16px 30px;background:black;color:white;border:none;border-radius:12px;">
          Add to Cart
        </button>
      </form>

      <div style="margin-top:40px;">
        {{ product.description }}
      </div>

    </div>

  </div>
</section>
